{% extends "layout.html" %}

{% block heading %}
Write your review!!
{% endblock %}

{% block body %}

<div class="row">
  <div class="col-sm">
    <table class="table table-striped">
        <tr class="thead-dark">
          <th>Title</th>
          <th>Author</th>
          <th>Year</th>
        </tr>
        <tr>
          <th>{{ title }}</th>
          <th>{{ author }}</th>
          <th>{{ year }}</th>
        </tr>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-sm">
    <form action="{{ url_for('writeBookReview') }}" method="post">

      <textarea name="comment" cols="50" rows="10" class="w-100"></textarea>
      <br/>

      <input type="submit" name="submitReview" value="submitReview" />
      <input type="submit" name="logout" value="logout" />


    </form>
  </div>
</div>


{% endblock %}
